                              <p class = "panel-title bold">You want to work for <%= link_to order.service.user.name, profile_path(order.service.user.id) %>!</p>
                          <%- else -%>
                              <p class = "panel-title bold">You want to hire <%= link_to order.service.user.name, profile_path(order.service.user.id) %>!</p>
                          <%- end -%>
                          <p class = "panel-title bold margin-top"><%= link_to order.headline.titleize, show_service_path(order.service) %></p>
                          <p class = "panel-cost bold"><%= number_to_currency(order.price) %>/<%= order.service.fixed_rate ? 'job' : 'hour' %></p>
                          <p class = "panel-contact"><%= order.appointment_time.strftime("%_-m/%d/%Y %l:%M%P") %> </p>
                      </div>

                      <div class = "module-make-connection padding-mini text-center margin-bottom module per100">
                            <%= link_to '<i class="fa fa-trash-o" aria-hidden="true"></i>'.html_safe, cancel_service_order_path(order.service, order), method: :post,  data: { confirm: "Are you sure you want to do that?" } %>

                       </div>

