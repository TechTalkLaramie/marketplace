                <div class = "module per33 tab-per100 padding-right-medium">
                    <h3 class = "margin-bottom">Upcoming gigs and hires</h3>

                    <%- current_user.accepted_orders_i_have_or_placed.each do |order| -%>
                    <%- if !order.complete? -%>
                        <div class = "panel-notification <%= order.service.seeking_help? ? "hire" : "gig" %>">
                            <%- if order.service.seeking_help? -%>
                                <p class = "panel-title bold"><%= link_to order.user.name, profile_path(order.user.id) %> is working for you!</p>
                            <%- else -%>
                                <p class = "panel-title bold"><%= link_to order.user.name, profile_path(order.user.id) %> hired you!</p>
                            <%- end -%>

                          <p class = "panel-title bold margin-top"><%= link_to order.headline.titleize, show_service_path(order.service) %></p>
                          <p class = "panel-cost bold"><%= number_to_currency(order.price) %>/<%= order.service.fixed_rate ? 'job' : 'hour' %></p>
                          <p class = "panel-contact"><%= order.appointment_time.strftime("%_-m/%d/%Y %l:%M%P") %></p>
                      </div>
                      <div class = "module-make-connection padding-mini text-center margin-bottom module per100">
                            <%= link_to '<i class="fa fa-trash-o" aria-hidden="true"></i>'.html_safe, cancel_service_order_path(order.service, order), method: :post, :class => 'padding-right-small', data: { confirm: "Are you sure you want to do that?" } %>
                            <%= link_to '<i class="fa fa-check" aria-hidden="true"></i>'.html_safe, complete_service_order_path(order.service, order), method: :post, :class => 'padding-left-small'%>
                       </div>

                    <%- end -%>

                    <%- end -%>
                </div>

                <div class = "module per33 tab-per100 padding-left-small padding-right-small">
                    <h3 class = "margin-bottom">Pending Incoming offers</h3>

                   <%- current_user.orders.unaccepted_awaiting_response.each do |order| -%>
                      <div class = "panel-notification  <%= order.service.seeking_help ? 'hire' : 'gig' =%>">
                          <%- if order.service.seeking_help? -%>
                              <p class = "panel-title bold"><%= link_to order.user.name, profile_path(order.user.id) %> wants to work for you!</p>
                          <%- else -%>
                              <p class = "panel-title bold"><%= link_to order.user.name, profile_path(order.user.id) %> wants to hire you!</p>
                          <%- end -%>
                          <p class = "panel-title bold margin-top"><%= link_to order.headline.titleize, show_service_path(order.service) %></p>
                          <p class = "panel-cost bold"><%= number_to_currency(order.price) %>/<%= order.service.fixed_rate ? 'job' : 'hour' %></p>
                          <p class = "panel-contact"><%= order.appointment_time.strftime("%_-m/%d/%Y %l:%M%P") %></p>
                      </div>

                      <div class = "module-make-connection padding-mini text-center margin-bottom module per100">
                            <%= link_to 'Accept'.html_safe, accept_service_order_path(order.service, order), method: :post, :class => 'padding-right-small' %>
                            <%= link_to 'Reject'.html_safe, reject_service_order_path(order.service, order), method: :post, :class => 'padding-left-small'%>
                       </div>
                    <%- end -%>
                </div>

                <div class = "module per33 tab-per100 padding-left-medium">
                    <h3 class = "margin-bottom">Pending Outgoing offers</h3>

                    <%- current_user.orders_i_placed.unaccepted.each do |order| -%>
                      <div class = "panel-notification <%= order.service.seeking_help ? 'gig' : 'hire' =%>">
