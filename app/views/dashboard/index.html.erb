<section class = "banner" id = "banner-dashboard">
    <div class = "container">
        <div class = "module per100 padding-medium">
            <h3 class = "margin-bottom"><%= current_user.name %></h3>
            <div class = "module-container">
                <div class = "module per10">
                    <img class = "image-profile-picture" src = "img/goat picture.jpg">
                </div>


                <div class = "module per90 padding-left-medium">
                    <p><%= current_user.about_me %></p>
                </div>
            </div>
        </div>

        <div class = "module padding-medium per33 tab-per100">

            <h3 class = "margin-bottom">About <%= current_user.name.split(" ").first %></h3>
                <p><%= current_user.about_me %></p><br>

            <%= link_to "Create New Service", new_service_path, :class => 'button margin-bottom' %>

            <div class = "module-container">
                <p class = "bold uppercase padding-bottom-small">Services I Offer</p>

                <%- current_user.services.each do |service| -%>
                    <p class="service_<%= service.id %>"><%= service.headline %> - <%= number_to_currency service.price %>
                    <% if service.fixed_rate %>
                        (Fixed rate)
                    <% else %>
                        (Hourly rate)
                    <% end %>
                        <td class= "delete-button">
                          <br/ class="style-link-after">
                          <%= link_to "Edit", edit_service_path(service) %>
                          <%= link_to "Delete", service_path(service), data: { confirm: "Are you sure you want to do that?" }, remote: true, method: :delete %>
                        </td>
                    </p>
                <%- end -%>
            </div>

            <div class = "module-container">
                <p class = "bold uppercase margin-top padding-bottom-small">Recent postings</p>

                        <% @recent_postings.each do |posting| %>
                                <div class="service_<%= posting.id %>">
                                    <p class="bold">
                                    <%= posting.headline %> - $<%= posting.price %>
                                    <% if posting.fixed_rate %>
                                        (Fixed rate)
                                    <% else %>
                                        (Hourly rate)
                                    <% end %>
                                    </p>
                                    <p><%= posting.user.name %></p>
                                    <p><%= link_to "Hire", new_service_order_path(posting) %></p>
                                    <p class="margin-bottom"><%= posting.created_at %></p>
                                </div>
                        <% end %>

            </div>

            <div class = "module-container">
                <p class = "bold uppercase padding-bottom-small">Reviews</p>
            </div>
        </div>

        <div class = "module per33 tab-per50 padding-medium">
            <h3 class = "margin-bottom">Upcoming gigs and hires</h3>

            <%- if false -%>
            <div class = "panel-notification gig">
                <p class = "panel-title bold">Snow Shoveling</p>
                <span class = "panel-cost bold">$30</span>
                <p class = "panel-contact">On 4/29/2017 for Lenore Kubie</p>
                <p class = "panel-description padding-top-small">Shoveling for Lenore</p>
            </div>
            <%- end -%>

            <%- current_user.orders.accepted.each do |order| -%>
              <div class = "panel-notification offer">
                  <p class = "panel-title bold"><%= order.headline %></p>
                  <span class = "panel-cost bold"><%= number_to_currency(order.price) %></span>
                  <p class = "panel-contact">For <%= order.appointment_time.strftime("%m/%d/%Y") %> from <%= order.user.name %></p>
                  <p class = "panel-description padding-top-small"><%= order.description %></p>
              </div>
            <%- end -%>
        </div>

        <div class = "module per33 tab-per50 padding-medium">
            <h3 class = "margin-bottom">Incoming offers</h3>

            <%- current_user.orders.unaccepted.each do |order| -%>
              <div class = "panel-notification offer">
                  <p class = "panel-title bold"><%= order.headline %></p>
                  <span class = "panel-cost bold"><%= number_to_currency(order.price) %></span>
                  <p class = "panel-contact">For <%= order.appointment_time.strftime("%m/%d/%Y") %> from <%= order.user.name %></p>
                  <p class = "panel-description padding-top-small"><%= order.description %></p>
              </div>
            <%- end -%>
        </div>

    </div>
</section>
