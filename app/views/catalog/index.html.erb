<section class = "banner">
    <div class = "container text-center">
        <div class = "module per33">
            Search within <input type = "text" placeholder = "number">
        </div>
        
        <div class = "module per33">
            <input type = "checkbox" value = "for hire">For hire
            <input type = "checkbox" value = "offers">Seeking work
        </div>
        
        <div class = "module-container">
        <h3 class = "large margin-bottom">Postings</h3>
        
				<%- Service.all.each do |service| -%>
				<div class = "module per25 tab-per50 servicesOfferedListingModule padding-medium">
					<%= link_to show_service_path(service) do %>
					<div class = "module-container servicesOfferedListingContainer" >
						
						<div class = "module moduleServiceOfferedTitle per100 text-center bold padding-small">
							<%= service.headline %>
						</div>
						<div class = "module moduleServiceOfferedPhoto per100 text-center ">
							<img src = "http://i.dailymail.co.uk/i/pix/2014/08/05/1407225932091_wps_6_SANTA_MONICA_CA_AUGUST_04.jpg" class = "service-profile-picture">
						</div>
						<div class = "module moduleServiceOfferedName per100 text-center padding-small">
							<%= service.user.name %>
						</div>
						<div class = "module moduleServiceOfferedPrice per100 text-center padding-bottom-small">
							<%= number_to_currency(service.price) %>/<%= service.fixed_rate ? 'job' : 'hr' %>
						</div>
					</div>
					<%- end -%>
				</div>
				<%- end -%>
            </div>
		</div>
</section>

